<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="300dp"
    android:layout_height="match_parent"
    tools:context="com.example.raymondlian.hoppen.SignUpFragment"
    android:background="@color/white">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/person_8x"
        android:id="@+id/_person_icon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:alpha="0.75"/>
    <EditText
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/_person_icon"
        android:id="@+id/_editText_UserName"
        android:text="email"
        android:alpha="0.6"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/envelope_closed_8x"
        android:id="@+id/_mail_icon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:alpha="0.75"
        android:layout_below="@+id/_person_icon"/>
    <EditText
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/_mail_icon"
        android:id="@+id/_editText_UserEmail"
        android:text="email"
        android:alpha="0.6"
        android:layout_below="@+id/_editText_UserName"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/lock_locked_8x"
        android:id="@+id/_lock_icon"
        android:layout_below="@+id/_mail_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:alpha="0.75"/>
    <EditText
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/_lock_icon"
        android:layout_below="@id/_editText_UserEmail"
        android:id="@+id/_editText_UserPassword"
        android:text="Password"
        android:alpha="0.6"

        />
    <EditText
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/_lock_icon"
        android:layout_below="@id/_editText_UserPassword"
        android:id="@+id/_confirm_editText_UserPassword"
        android:text="Confirm Password"
        android:alpha="0.6"
        />
    <Button
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:background="@color/set1AccentDark"
        android:layout_below="@id/_confirm_editText_UserPassword"
        android:layout_marginTop="30dp"
        android:id="@+id/_login_button"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>
